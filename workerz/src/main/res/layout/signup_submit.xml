<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLinearLayoutSignUpSubmit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include
        layout="@layout/my_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20ssp"
                android:orientation="horizontal">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/firstNameEditTextSignUpSubmit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:hint="@string/first_name"
                    android:inputType="text|textCapSentences"
                    android:maxLength="15"
                    android:nextFocusDown="@+id/lastNameEditTextSignUpSubmit"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_11ssp"
                    app:met_baseColor="@color/colorBlack"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextSize="@dimen/_10ssp"
                    app:met_primaryColor="@color/colorGreen"
                    app:met_singleLineEllipsis="false" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/lastNameEditTextSignUpSubmit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:hint="@string/last_name"
                    android:inputType="text|textCapSentences"
                    android:maxLength="15"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_11ssp"
                    app:met_baseColor="@color/colorBlack"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextSize="@dimen/_10ssp"
                    app:met_primaryColor="@color/colorGreen"
                    app:met_singleLineEllipsis="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">

                    <LinearLayout
                        android:id="@+id/countrySpinnerSignUp"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/countryCodeTextViewSignUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:text="@string/_91"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12ssp" />

                        <ImageView
                            android:id="@+id/countryCodeImageViewSignUp"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_19sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:contentDescription="TODO" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:contentDescription="TODO"
                            android:src="@drawable/dropdown_arrow" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="0.3dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/colorSpinner" />
                </FrameLayout>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/mobileNoEditTextSignUpSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="@string/mobile_number"
                    android:inputType="number"
                    android:maxLength="15"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_11ssp"
                    app:met_baseColor="@color/colorBlack"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextSize="@dimen/_10ssp"
                    app:met_primaryColor="@color/colorGreen"
                    app:met_singleLineEllipsis="false" />

            </LinearLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/emailEditTextSignUpSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:paddingLeft="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_11ssp"
                app:met_baseColor="@color/colorBlack"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelTextSize="@dimen/_10ssp"
                app:met_primaryColor="@color/colorGreen"
                app:met_singleLineEllipsis="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:id="@+id/textviewgender"
                    android:text="@string/gender" />

                <RadioGroup
                    android:id="@+id/maleFemaleRadioGroupSignUpSubmit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:checkedButton="@id/maleRadioButtonSignUpSubmit"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/maleRadioButtonSignUpSubmit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="@string/male"
                        android:textSize="@dimen/_12ssp" />

                    <RadioButton
                        android:id="@+id/femaleRadioButtonSignUpSubmit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="@string/female"
                        android:textSize="@dimen/_12ssp" />
                </RadioGroup>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--<android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:hint="@string/address"/>

                </android.support.design.widget.TextInputLayout>-->

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/addressEditTextSignUpSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="@string/address"
                    android:inputType="textPostalAddress"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_11ssp"
                    app:met_baseColor="@color/colorBlack"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextSize="@dimen/_10ssp"
                    app:met_primaryColor="@color/colorGreen"
                    app:met_singleLineEllipsis="false" />

                <TextView
                    android:id="@+id/addressTextViewSignUpSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:padding="@dimen/_5sdp" />
            </FrameLayout>

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/countryOfResidenceSpinnerSignUpSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10ssp"
                app:ms_alignLabels="true"
                app:ms_arrowColor="@color/colorGreen"
                app:ms_arrowSize="@dimen/_12sdp"
                app:ms_baseColor="@color/colorSpinner"
                app:ms_enableErrorLabel="false"
                app:ms_enableFloatingLabel="false"
                app:ms_floatingLabelColor="@color/colorSpinnerText"
                app:ms_floatingLabelText="@string/country_of_residence"
                app:ms_highlightColor="@color/colorGreen"
                app:ms_hint="@string/country_of_residence"
                app:ms_hintColor="@color/colorSpinnerText"
                app:ms_hintTextSize="@dimen/_10ssp"
                app:ms_multiline="false"
                app:ms_thickness="0.5dp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/passportNoEditTextSignUpSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/passport_no"
                android:maxLength="10"
                android:paddingLeft="@dimen/_5sdp"
                android:text=""
                android:inputType=""
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_11ssp"
                app:met_baseColor="@color/colorBlack"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelTextSize="@dimen/_10ssp"
                app:met_primaryColor="@color/colorGreen"
                app:met_singleLineEllipsis="false" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/emiratesIdEditTextSignUpSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/emirates_id"
                android:inputType="number"
                android:maxLength="16"
                android:paddingLeft="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_11ssp"
                app:met_baseColor="@color/colorBlack"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelTextSize="@dimen/_10ssp"
                app:met_primaryColor="@color/colorGreen"
                app:met_singleLineEllipsis="false" />


            <TextView
                android:id="@+id/tvCreateAccountSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/_9ssp" />

            <TextView
                android:id="@+id/submitTextViewSignUpSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/yellow_btn"
                android:gravity="center"
                android:text="@string/next"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>