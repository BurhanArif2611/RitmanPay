<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

  <include
      layout="@layout/my_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

  </include>

  <android.support.design.widget.TabLayout
      android:id="@+id/billPaymentTabLayout"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_70sdp"
      android:layout_gravity="center"
      android:background="@color/colorWhite"
      app:tabBackground="@color/colorWhite"
      app:tabGravity="fill"
      app:tabIndicatorColor="@color/colorGreen"
      app:tabMaxWidth="0dp"
      app:tabMode="scrollable"
      app:tabSelectedTextColor="@color/colorGrey"
      app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
      app:tabTextColor="@color/colorGrey" />

  <android.support.v4.view.ViewPager
      android:id="@+id/billPaymentViewPager"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:background="@color/colorBackGrey" />
</LinearLayout>