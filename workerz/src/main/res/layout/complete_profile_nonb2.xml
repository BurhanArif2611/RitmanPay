<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/image3"
            android:layout_height="match_parent">

        </ImageView>
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent">

        </ImageView>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:text="2/2"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="right"
            android:padding="8dp"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/backgtound_round_up"
        >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complete your profile"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/blakish"
                android:layout_marginTop="30sp"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                >

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textSize="15dp"
                android:textColor="@color/darkgrey"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="10dp"
                >

            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="India"
                android:id="@+id/countrysignup"

                android:background="@drawable/edittext_grey"
                >

            </EditText>   <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="15dp"
                android:textColor="@color/darkgrey"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="10dp"
                >

            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="Gurgaon"
                android:id="@+id/citysignup"

                android:background="@drawable/edittext_grey"
                >

            </EditText>   <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="15dp"
                android:textColor="@color/darkgrey"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="10dp"
                >

            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="India"
                android:id="@+id/addresssignup"

                android:background="@drawable/edittext_grey"
                >

            </EditText>   <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nationality"
                android:textSize="15dp"
                android:textColor="@color/darkgrey"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="10dp"
                >

            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="India"
                android:id="@+id/nationalitysignup"

                android:background="@drawable/edittext_grey"
                >

            </EditText>





    <Button
    android:id="@+id/createnext2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
        android:layout_margin="10sp"
    android:background="@drawable/button_design"
    android:text="Next"
        android:textAllCaps="false"
        android:textSize="18dp"
    android:textColor="@android:color/white" /></LinearLayout>

    </LinearLayout>

