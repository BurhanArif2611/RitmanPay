<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <com.fil.workerappz.utils.SlideHolder
      android:id="@+id/slideHolderSendMoney"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <view
        class="com.fil.workerappz.utils.DrawerMenu"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <include
          layout="@layout/my_header2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

      </include>

      <android.support.design.widget.TabLayout
          android:id="@+id/sendMoneyTabLayout"
          android:layout_width="match_parent"
          android:layout_height="@dimen/_35sdp"
          android:background="@color/colorGreen"
          app:tabBackground="@color/colorGreen"
          app:tabGravity="fill"
          app:tabIndicatorColor="@color/colorWhite"
          app:tabMaxWidth="0dp"
          app:tabMode="scrollable"
          app:tabSelectedTextColor="@color/colorWhite"
          app:tabTextAppearance="@style/myTabLayout"
          app:tabTextColor="@color/colorWhite" />

      <android.support.v4.view.ViewPager
          android:id="@+id/sendMoneyViewPager"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:background="@color/colorBackGrey" />
    </LinearLayout>
  </com.fil.workerappz.utils.SlideHolder>
</LinearLayout>